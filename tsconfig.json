{
  "extends": ["@macalinao/tsconfig/tsconfig.vite.json"],
  "compilerOptions": {
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["bun", "vitest/globals"]
  },
  "include": ["src/**/*", "vite.config.ts", "vitest.config.ts"]
}
